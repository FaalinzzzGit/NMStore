{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/admin",
      "dest": "/admin.html"
    },
    {
      "src": "/admin-panel",
      "dest": "/admin-panel.html"
    },
    {
      "src": "/products.html",
      "dest": "/products.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
